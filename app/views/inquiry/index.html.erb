<h2>お問い合わせ</h2>
<% if @inquiry.errors.any? %>
<%= @inquiry.errors.count %>個のエラーがあります。<br />
<% @inquiry.errors.full_messages.each do |msg| %>
<%= msg %><br />
<% end %>
<% end %>
<%= form_for @inquiry, :url => confirm_path do |f| %>
<table>
    <tr>
        <th><%= f.label "名前" %></th>
        <td><%= f.text_field :name %></td>
    </tr>
    <tr>
        <th><%= f.label "メールアドレス" %></th>
        <td><%= f.text_field :email %></td>
    </tr>
    <tr>
        <th><%= f.label "生年月日" %></th>
        <td><%= f.date_select(:birthday, :start_year => 1930, :end_year => Time.now.year, :default => "1990-1-1".to_date) %></td>
    </tr>
    <tr>
        <th><%= f.label "内容" %></th>
        <td><%= f.text_area :content %></td>
    </tr>
    <tr>
        <td><%= f.submit "確認" %></td>
    </tr>
</table>

<% end %>