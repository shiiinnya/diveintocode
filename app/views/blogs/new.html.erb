<h2>新規記事作成</h2>

<% if @blog.errors.any? %>
<%= @blog.errors.count %>個のエラーがあります。<br>
<% @blog.errors.full_messages.each do |msg| %>
<%= msg %><br>
<% end %>
<% end %>

<%= form_for @blog do |f| %>
    <div class="form-group">
        <%= f.label "タイトル" %>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
          <%= f.label "内容" %>
          <%= f.text_area :content, class: "form-control" %>
    </div>
    <div class="form-group">
            <%= f.submit "保存" %>
    </div>

<% end %>