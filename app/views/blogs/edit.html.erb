<h2>記事編集</h2>
<%= form_for @blog do |f| %>
    <div class="form-group">
        <%= f.label "タイトル" %>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
          <%= f.label "内容" %>
          <%= f.text_area :content, class: "form-control" %>
    </div>
    <div class="form-group">
            <%= f.submit "保存", class: "btn btn-primary btn-lg" %>
    </div>
<% end %>