<h2>ユーザ編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">  
      <%= profile_img(@user) %>
      <%= f.label :image,"ユーザー画像" %>
      <%= f.file_field :image, autofocus: true %>
      <%= f.hidden_field :image_cache %>
  </div>
  <div class="form-group">
    <%= f.label "名前" %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
<% if @user.provider == 'facebook' %>
<% elsif @user.provider == 'twitter' %>
<% else %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>
<% end %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(空欄なら変更しません)</i>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>



  <div class="actions">
    <%= f.submit "変更する", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<h3>アカウント削除</h3>

<p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary btn-lg" %></p>

<%= link_to "戻る", :back %>
