<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<p>
  <strong>Category:</strong>
  <%= @question.category %>
</p>

<p>
  <strong>Language:</strong>
  <%= @question.language %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

<%= render partial: 'messages/form', locals: { message: @message } %>
<!-- questions_controllerでインスタンス化し代入した@messageをmessageに代入しmessages/formを呼びだす -->

<div id="message_area">
<%= render partial: 'messages/index', locals: { messages: @messages } %>
<!--多くのメッセージをここに表示させたいのでquestions_controllerで指定した@messagesをmessagesに代入しmessages/indexを呼びだす -->
</div>