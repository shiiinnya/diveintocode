<%= form_for(@comment, remote: true) do |f| %>

  <%= f.hidden_field :blog_id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_field :content %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
