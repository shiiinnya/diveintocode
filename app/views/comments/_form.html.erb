<%= form_for(@comment, remote: true) do |f| %>

  <%= f.hidden_field :blog_id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-group">
    <%= f.label :comment %><br>
    <%= f.text_field :content, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
