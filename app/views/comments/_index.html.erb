<ul>
    <% comments.each do |comment| %>
      <% unless comment.id.nil? %>
      <p>
        <li>User:　<%= current_user.name %></li>
        <li>Comment:　<%= comment.content %></li><br>
        <!-- link_to 'Show', comment -->
        <%= link_to 'Edit', edit_blog_comment_path(@blog, comment) %>
        <%= link_to 'Destroy', blog_comment_path(@blog, comment), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
        </p>
        <br>
      <% end %>
    <% end %>
  </ul>


